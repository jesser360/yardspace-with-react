<br/><br/>
<div class="background-image">
  <div class="container signup-form">
    <br/><br/><br/>
    <h1 align="center">Signup as a new user</h1>
    <%= form_for @curr_user,  :url => signup_path(@curr_user), html: {method: :post} do |f| %>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="control-label col-sm-2 text-right">
          <%= f.label :email %>
        </div>
        <div class="col-xs-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
    </div>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="control-label col-sm-2 text-right">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name here" %>
        </div>
      </div>
    </div>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="control-label col-sm-2 text-right">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
    </div>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="control-label col-sm-2 text-right">
          <%= f.label :password_confirmation, 'Confirm password' %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again" %>
        </div>
      </div>
      <div class='row signup-form'>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 sign-btn signup-form ">
            <%= f.submit "Sign up Here", class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
